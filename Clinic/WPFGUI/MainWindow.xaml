<Window x:Class="WPFGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGUI"
        mc:Ignorable="d"
        Title="Clinic" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="414*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="New Patient" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="30,35,0,0" Click="button_Click" Cursor="Hand"/>
        <Button x:Name="button1" Content="New Doctor" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Width="110" Click="button1_Click"/>
        <Button x:Name="button2" Content="New Appointment" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top" Width="110" Click="button2_Click"/>

    </Grid>
</Window>
